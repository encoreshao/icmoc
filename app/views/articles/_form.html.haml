.article.span9
  = simple_form_for resource, url: url, html: { class: 'form-horizontal' } do |f|
    %fieldset
      = f.input :user_id, as: :hidden, input_html: { value: 1 }
      = f.input :category_id, collection: Category.tags.map{|a| [a.name, a.id]}, prompt: '选择类型', input_html: { class: 'fixed-width' }
      = f.input :province_id, collection: Province.scoped.map{|a| [a.name, a.id]}, prompt: '选择交易城市', input_html: { class: 'fixed-width' }
      = f.input :swap_name, required: true
      = f.input :wish_name, required: true
      = f.input :phone, required: true
      = f.input :qq, required: true
      = f.input :slug, required: true
      = f.input :image, required: true
      = f.input :description, as: :text, input_html: { rows: 5 }

      .control-group
        %label
        .controls= f.submit class: 'btn'