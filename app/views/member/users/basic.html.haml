.row
  = simple_form_for @user, url: basic_member_users_path, html: { method: :put } do |f|
    = f.input :name,    required: true
    = f.input :email,   required: true, disabled: true, hint: "Registered mail cannot be changed"
    = f.input :gender,  as: :radio_buttons, collection: [[t('select.man'), true], [t('select.famale'), false]]
    = f.input :birthday, as: :date, use_month_numbers: true, start_year: 1900, end_year: Date.today.year
    = f.input :biography, as: :text, input_html: { rows: 5 }

    .control-group
      %label
      .controls= f.submit t('actions.save'), class: 'btn btn-primary'

    
