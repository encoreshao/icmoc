.row
  = simple_form_for @user, url: portrait_member_users_path, html: { method: :put } do |f|
    - if !@user.new_record? && @user.avatar
      .control-group
        %label
        .controls
          = image_tag @user.avatar
          = image_tag @user.avatar.thumb

    = f.input :avatar, as: :file


    .control-group
      %label
      .controls= f.submit class: 'btn'

    
