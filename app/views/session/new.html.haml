#session.span9
  = simple_form_for @user, url: create_session_path, html: { class: 'form-horizontal' } do |f|
    = f.input :name, required: true 
    = f.input :email, required: true
    = f.input :password, required: true
    = f.input :password_confirmation, required: true

    = f.simple_fields_for :problems, @problem do |p|
      = p.input :problem, required: true
      = p.input :answer, required: true

    = f.input :terms, as: :text, input_html: { value: terms_text, size: '20x10' }

    .control-group
      %label
      .controls
        = f.submit t('actions.save'), class: 'btn btn-primary'
        = submit_tag t('actions.reset'), type: :reset, class: "btn btn-danger"
  