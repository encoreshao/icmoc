.contact.span9
  = simple_form_for @contact, defaults: { input_html: { class: 'form-horizontal' } } do |f| 
    = f.input :name, input_html: { class: 'input-large' } 
    = f.input :email, required: true
    = f.input :mobile, input_html: { maxlength: 13 } 
    = f.input :content, as: :text, required: true, input_html: { size: "20x10" }

    .control-group
      %label
      .controls
        = f.button :submit, '发送', class: 'btn'