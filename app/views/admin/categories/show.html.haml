.page-header
  %h3
    = resource.class.model_name.human
    %small
    = link_to t('actions.back').html_safe, :back, class: 'btn btn-success'
    = link_to t('actions.edit').html_safe, edit_resource_path, class: 'btn'


.category-detail
  %h3= resource.parent && resource.parent.name
  %h5
    %p
      = resource.class.human_attribute_name(:name)
      = resource.name
    %p
      = resource.class.human_attribute_name(:name_en)
      = resource.name_en
    %p
      = resource.class.human_attribute_name(:slug)
      = resource.slug