= simple_form_for resource, url: url, html: { class: 'form-horizontal' } do |f|
  %fieldset
    = f.label :province
    = f.region_select :province
    =# f.input :province_id, collection: Province.options
    = f.input :name, required: true
    = f.input :name_en, required: true
    = f.input :name_abbr, required: true
    
    = f.submit class: 'btn'